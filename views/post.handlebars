<div class="text-center">
  <h2>{{name}}</h2>
  <p> here is the {{body}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add A Comment:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="comment-body"></label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button type="click" id="create-comment" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
  {{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Posts:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h2>{{comment.body}}</h2>
      </div>
      <div class="col-md-4">
        <button type="click" class="btn btn-sm btn-danger" id= "delete-btn-comment" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <script src="./js/comment.js"></script>